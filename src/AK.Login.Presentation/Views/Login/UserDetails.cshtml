@model AK.Login.Presentation.LoginViewModel
@{ Layout = "Common.cshtml"; }

<div class="visible-md visible-lg large-top-padding">
</div>
<div class="container">
    <div class="row text-center">
        @Html.Raw(Model.Splash.TitleHtml)
        <br/><br/>
        <span class="small">
            What would you like to be called within @(Model.Splash.ApplicationName)?<br/>
            This does NOT have to be your real name.
        </span>
        <br/><br/>
        @using (Html.BeginForm("UserDetails", "Login"))
        {
            @Html.TextBoxFor(x => x.User.DisplayName, new { @class="small"})
            <br/><br/>
            <button type="submit" class="btn btn-sm btn-primary">Done</button>
        }
    </div>
</div>